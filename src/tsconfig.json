{
  "compilerOptions": {
    "declaration": true,
    "target": "es2022",
    "module": "es2020",
    "baseUrl": ".",
    "stripInternal": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "outDir": "../build",
    "rootDir": ".",
    "lib": [
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "es2020",
      "dom"
    ],
    "skipLibCheck": true,
    "types": [
      "slick-carousel",
      "jquery"
    ]
  },
  "angularCompilerOptions": {
    "annotateForClosureCompiler": true,
    "compilationMode": "partial",
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true,
    "flatModuleOutFile": "ngx-slick-carousel.js",
    "flatModuleId": "ngx-slick-carousel"
  },
  "files": [
    "./index.ts"
  ]
}
